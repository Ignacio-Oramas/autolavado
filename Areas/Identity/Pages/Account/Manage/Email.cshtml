@page
@model EmailModel
@{
    ViewData["Title"] = "Gestionar Correo";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fa-solid fa-envelope"></i> @ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <partial name="_StatusMessage" for="StatusMessage" />
        <div class="row">
            <div class="col-md-8">
                <form id="email-form" method="post">
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="form-floating mb-3 input-group">
                            <input asp-for="Email" class="form-control" placeholder="Ingrese su correo electrónico." disabled />
                                <div class="input-group-append">
                                    <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                                </div>
                            <label asp-for="Email" class="form-label">Correo electrónico</label>
                        </div>
                    }
                    else
                    {
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Ingrese su correo electrónico." disabled />
                            <label asp-for="Email" class="form-label">Correo electrónico</label>
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Enviar correo de verificación</button>
                        </div>
                    }
                    <div class="form-floating mb-3">
                        <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Ingrese el nuevo correo electrónico." />
                        <label asp-for="Input.NewEmail" class="form-label">Nuevo correo electrónico</label>
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                    </div>
                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary">
                        <i class="fa-solid fa-save"></i> Cambiar correo
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}