@model mvcrud.Helpers.PaginatedList<mvcrud.Models.WashingOrder>

@{
    ViewData["Title"] = "Órdenes de Lavado";
}

<h1>Órdenes de Lavado</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Nueva Orden
    </a>
</p>
<table class="table table-hover mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault()!.Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault()!.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault()!.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault()!.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault()!.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault()!.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle!.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service!.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee!.Nombre)
            </td>
            <td>
                @item.Fecha.ToShortDateString()
            </td>
            <td>
                <span class="badge @(item.Estado == WashingState.Pendiente ? "bg-warning text-dark" : (item.Estado == WashingState.Terminado ? "bg-success" : "bg-primary"))">
                    @Html.DisplayFor(modelItem => item.Estado)
                </span>
            </td>
            <td>
                $@item.Total.ToString("0.00")
            </td>
            <td>
                @if (item.Estado == WashingState.Pendiente)
                {
                    <a asp-action="Iniciar" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white"><i class="fa-solid fa-play"></i> Comenzar Lavado</a>
                }
                else if (item.Estado == WashingState.Procesando)
                {
                    <a asp-action="Completar" asp-route-id="@item.Id" class="btn btn-sm btn-success text-white"><i class="fa-solid fa-check"></i> Finalizar</a>
                }
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary" title="Editar"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Detalles"><i class="fa-solid fa-circle-info"></i> Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar"><i class="fa-solid fa-trash"></i> Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               class="page-link">
                &lt; Anterior
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a asp-action="Index"
                   asp-route-pageNumber="@i"
                   class="page-link">@i</a>
            </li>
        }
        <li class="page-item @nextDisabled">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               class="page-link">
                Siguiente &gt;
            </a>
        </li>
    </ul>
</nav>