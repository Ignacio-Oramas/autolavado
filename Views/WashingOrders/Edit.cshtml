@model mvcrud.Models.WashingOrder

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Orden</h1>

<h4>Orden de Lavado</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fa-solid fa-file-invoice"></i> Datos de la Orden</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="VehicleId" class="form-label fw-bold"><i class="fa-solid fa-car"></i> Veh√≠culo</label>
                            <select asp-for="VehicleId" class="form-select" asp-items="ViewBag.VehicleId"></select>
                            <span asp-validation-for="VehicleId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ServiceId" class="form-label fw-bold"><i class="fa-solid fa-hand-sparkles"></i> Servicio</label>
                            <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId"></select>
                            <span asp-validation-for="ServiceId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="EmployeeId" class="form-label fw-bold"><i class="fa-solid fa-user-gear"></i> Empleado</label>
                            <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId"></select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Estado" class="form-label fw-bold"><i class="fa-solid fa-bars-progress"></i> Estado</label>
                            <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<WashingState>()"></select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Fecha" class="form-label fw-bold"><i class="fa-solid fa-calendar"></i> Fecha</label>
                            <input asp-for="Fecha" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Total" class="form-label fw-bold"><i class="fa-solid fa-money-bill"></i> Total</label>
                            <input asp-for="Total" class="form-control" />
                            <span asp-validation-for="Total" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fa-solid fa-save"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
