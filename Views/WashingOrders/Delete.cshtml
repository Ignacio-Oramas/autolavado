@model mvcrud.Models.WashingOrder

@{
    ViewData["Title"] = "Eliminar Orden";
}

<div class="container-fluid px-4">
    <div class="card shadow-sm mt-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fa-solid fa-triangle-exclamation me-2"></i>Eliminar Orden</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4 text-center font-weight-bold">¿Está seguro de que desea eliminar esta orden?</h5>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-car me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Vehicle)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Vehicle!.Placa)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-bell-concierge me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Service)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Service!.Nombre)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-user-tie me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Employee)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Employee!.Nombre)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-calendar-days me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Fecha)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Fecha)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-list-check me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.Estado == WashingState.Pendiente ? "bg-warning text-dark" : (Model.Estado == WashingState.Terminado ? "bg-success" : "bg-primary"))">
                        @Html.DisplayFor(model => model.Estado)
                    </span>
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-money-bill-wave me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Total)
                </dt>
                <dd class="col-sm-9">
                    $@Model.Total.ToString("0.00")
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fa-solid fa-trash me-2"></i>Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                    <i class="fa-solid fa-xmark me-2"></i>Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
