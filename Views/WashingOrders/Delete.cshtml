@model mvcrud.Models.WashingOrder

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Orden</h1>

<h3>¿Está seguro que desea eliminar esta orden?</h3>
<div>
    <h4>Orden de Lavado</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehicle!.Placa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee!.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            <span class="badge @(Model.Estado == WashingState.Pendiente ? "bg-warning text-dark" : (Model.Estado == WashingState.Terminado ? "bg-success" : "bg-primary"))">
                @Html.DisplayFor(model => model.Estado)
            </span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i> Eliminar
        </button> |
        <a asp-action="Index" class="btn btn-secondary">Regresar</a>
    </form>
</div>
