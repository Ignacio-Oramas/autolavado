@model mvcrud.Models.Vehicle

@{
    ViewData["Title"] = "Detalles del Vehículo";
}

<div class="container-fluid px-4">
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fa-solid fa-circle-info me-2"></i>Información del Vehículo</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-hashtag me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Placa)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Placa)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-car me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Modelo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Modelo)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-palette me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Color)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-user me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Client)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Client!.Nombre)
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4">
                <i class="fa-solid fa-pen-to-square me-2"></i>Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                <i class="fa-solid fa-arrow-left me-2"></i>Volver a la Lista
            </a>
        </div>
    </div>
</div>
