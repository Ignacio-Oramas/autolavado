@model mvcrud.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo Vehículo</h1>

<h4>Registrar Vehículo</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fa-solid fa-car"></i> Datos del Vehículo</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Placa" class="form-label fw-bold"><i class="fa-solid fa-hashtag"></i> Placa</label>
                            <input asp-for="Placa" class="form-control" placeholder="Ej. ABC-123" />
                            <span asp-validation-for="Placa" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Modelo" class="form-label fw-bold"><i class="fa-solid fa-car-side"></i> Modelo</label>
                            <input asp-for="Modelo" class="form-control" placeholder="Ej. Toyota Corolla" />
                            <span asp-validation-for="Modelo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Color" class="form-label fw-bold"><i class="fa-solid fa-palette"></i> Color</label>
                            <input asp-for="Color" class="form-control" placeholder="Ej. Rojo" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ClientId" class="form-label fw-bold"><i class="fa-solid fa-user"></i> Cliente (Dueño)</label>
                            <select asp-for="ClientId" class ="form-select" asp-items="ViewBag.ClientId"></select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fa-solid fa-plus"></i> Registrar Vehículo
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
