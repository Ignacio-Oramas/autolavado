@model mvcrud.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container-fluid px-4">
    <div class="card shadow-sm mt-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fa-solid fa-user-xmark me-2"></i>Eliminar Empleado</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4 text-center font-weight-bold">¿Está seguro de que desea eliminar este empleado?</h5>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-user me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-user me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-briefcase me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Puesto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Puesto)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-calendar me-2 text-primary"></i>@Html.DisplayNameFor(model => model.FechaNacimiento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-earth-americas me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Pais)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Pais)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-envelope me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fa-solid fa-trash me-2"></i>Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                    <i class="fa-solid fa-xmark me-2"></i>Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
