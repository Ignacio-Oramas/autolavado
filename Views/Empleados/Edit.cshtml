@model mvcrud.Models.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container-fluid px-4">
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="fa-solid fa-user-pen me-2"></i>Actualizar Datos del Empleado</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label font-weight-bold"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Apellido" class="form-label font-weight-bold"></label>
                            <input asp-for="Apellido" class="form-control" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Puesto" class="form-label font-weight-bold"></label>
                            <input asp-for="Puesto" class="form-control" />
                            <span asp-validation-for="Puesto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="FechaNacimiento" class="form-label font-weight-bold"></label>
                            <input asp-for="FechaNacimiento" class="form-control" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Pais" class="form-label font-weight-bold"></label>
                            <input asp-for="Pais" class="form-control" />
                            <span asp-validation-for="Pais" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label font-weight-bold"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Dirreccion" class="form-label font-weight-bold"></label>
                            <input asp-for="Dirreccion" class="form-control" />
                            <span asp-validation-for="Dirreccion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Ciudad" class="form-label font-weight-bold"></label>
                            <input asp-for="Ciudad" class="form-control" />
                            <span asp-validation-for="Ciudad" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="NumeroTelefono" class="form-label font-weight-bold"></label>
                            <input asp-for="NumeroTelefono" class="form-control" />
                            <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <!-- Hidden fields for audit trail if not editable -->
                    <input type="hidden" asp-for="CreadoPor" />
                    <input type="hidden" asp-for="FechaCreacion" />
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-warning px-4">
                        <i class="fa-solid fa-save me-2"></i>Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                        <i class="fa-solid fa-arrow-left me-2"></i>Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}