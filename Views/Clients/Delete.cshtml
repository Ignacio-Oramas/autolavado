@model mvcrud.Models.Client

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container-fluid px-4">
    <div class="card shadow-sm mt-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fa-solid fa-triangle-exclamation me-2"></i>Eliminar Cliente</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4 text-center font-weight-bold">¿Está seguro de que desea eliminar este cliente?</h5>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-user me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fa-solid fa-phone me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fa-solid fa-trash me-2"></i>Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                    <i class="fa-solid fa-xmark me-2"></i>Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
