@model mvcrud.Models.Service

@{
    ViewData["Title"] = "Eliminar Servicio";
}

<div class="container-fluid px-4">
    <div class="card shadow-sm mt-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fa-solid fa-triangle-exclamation me-2"></i>Eliminar Servicio</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4 text-center font-weight-bold">¿Está seguro de que desea eliminar este servicio?</h5>
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold">
                    <i class="fa-solid fa-tag me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-4 font-weight-bold">
                    <i class="fa-solid fa-dollar-sign me-2 text-primary"></i>@Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="col-sm-8">
                    $@Model.Precio.ToString("0.00")
                </dd>
                <dt class="col-sm-4 font-weight-bold">
                    <i class="fa-solid fa-clock me-2 text-primary"></i>@Html.DisplayNameFor(model => model.DuracionEstimada)
                </dt>
                <dd class="col-sm-8">
                    @{
                        var hours = Model.DuracionEstimada.Hours;
                        var minutes = Model.DuracionEstimada.Minutes;
                        var durationDisplay = "";

                        if (hours > 0)
                        {
                            durationDisplay = hours == 1 ? "1 hora" : $"{hours} horas";
                            if (minutes > 0)
                            {
                                durationDisplay += $" y {minutes} minutos";
                            }
                        }
                        else
                        {
                            durationDisplay = $"{minutes} minutos";
                        }
                    }
                    @durationDisplay
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fa-solid fa-trash me-2"></i>Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                    <i class="fa-solid fa-xmark me-2"></i>Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
